mixin link(text, link)
	a(target!=attributes.target, class!=attributes.class href=link )= text

mixin linkLeftPanel(text, link)
	a.left-panel-nav__link(target!=attributes.target, class!=attributes.class href=link )= text

mixin linkList(text, link)
	li
		a(target!=attributes.target, class!=attributes.class href=link )= text

mixin linkFaIcon(text, link, icon)
		a(target!=attributes.target, class!=attributes.class href=link )
			span.link__icon
				i.fa.fa-plus-circle.fa-lg(aria-hidden="true" class= icon)
			span #{text}

