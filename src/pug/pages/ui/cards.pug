extends ../../layouts/ui-layout.pug

block variables
	- var title = 'Карточки - UI-kit и HTML фреймворк - Документация'
	- var pageClass = 'body--dashboard'

block content
	include ../../sections/ui-nav-inside-ui.pug

	.main-wrapper
		.container.container--left
			.title Карточки
			.section-ui
				.title-medium Карточка Портфолио
			.section-ui
				+card-portfolio("../img/portfolio-preview.png", "Верстка Landing Page" ,"#")
			pre +card-portfolio("../img/portfolio-preview.png", "Верстка Landing Page" ,"#")
		
			.section-ui
				.title-medium Карточка Пост в блоге
			.section-ui
				+card-post("../img/blog-preview.png", "Поездка в New York пример длинного названия поста продолжаем текст." ,"#")
			pre +card-post("../img/blog-preview.png", "Поездка в New York пример длинного названия поста" ,"#")

			.section-ui
				.title-medium Карточка c контентом
			.section-ui
				+card('Подробнее', '#') 
					p Контент внутри карточки 
			pre.
				+card()
					p Контент внутри карточки 
			